<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- ===== TOOLBAR ===== -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:titleTextColor="@color/textPrimary"
        app:navigationIconTint="@color/textPrimary" />

    <!-- ===== CONTENT ===== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- STORE INFO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStoreSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Store Information"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    app:icon="@drawable/ic_store"
                    app:iconPadding="16dp"
                    app:iconTint="?attr/colorPrimary"
                    app:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- BILLING SETTINGS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBillingSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Billing Settings"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    app:icon="@drawable/ic_receipt"
                    app:iconPadding="16dp"
                    app:iconTint="?attr/colorPrimary"
                    app:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- INVOICE DESIGN -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInvoiceDesign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Invoice Design"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    app:icon="@drawable/ic_invoice"
                    app:iconPadding="16dp"
                    app:iconTint="?attr/colorPrimary"
                    app:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- DATA & SECURITY -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDataManagement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Data and Security Management"
                    android:textAllCaps="false"
                    android:gravity="start|center_vertical"
                    android:paddingStart="20dp"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    app:icon="@drawable/ic_security"
                    app:iconPadding="16dp"
                    app:iconTint="?attr/colorPrimary"
                    app:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>