<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIconTint="?attr/colorOnSurface" />

        <!-- Title -->
        <TextView
            android:text="Invoice Design"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Footer Message -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/ic_message"
            app:startIconTint="?attr/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFooter"
                android:hint="Footer Message"
                android:text="Thank You! Visit Again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="24dp"
            android:background="?attr/colorSurfaceVariant"/>

        <!-- Switches Section -->

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchShowLogo"
            android:text="Show Store Logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchShowGstin"
            android:text="Show GSTIN"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchShowPhone"
            android:text="Show Phone Number"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchShowDiscount"
            android:text="Show Discount Section"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchRoundOff"
            android:text="Enable Round Off"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveDesign"
            android:text="Save Design Settings"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            style="@style/Widget.EasyBilling.Button"/>

    </LinearLayout>

</ScrollView>